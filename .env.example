# =============================================================
# eGramSabha — Root Environment Variables (for docker-compose)
# =============================================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
# =============================================================

# Frontend settings
FRONTEND_PORT=3001
FRONTEND_API_URL=http://localhost:5000/api
FRONTEND_BACKEND_URL=http://localhost:5000
APP_INFRA=JIO

# Backend settings
BACKEND_PORT=5000
BACKEND_URL=http://localhost:5000
CORS_ORIGIN=*
STORAGE_BACKEND=gridfs
VIDEO_MOM_BACKEND_URL=http://localhost:8000

# MongoDB settings
MONGODB_URI=mongodb://localhost:27017/voter_registration
MONGODB_PORT=27017
MONGODB_URL=mongodb://mongodb:27017
DATABASE_NAME=voter_registration

# General settings
NODE_ENV=development

# HuggingFace — get your token at https://huggingface.co/settings/tokens
HF_TOKEN=your_huggingface_token_here
STT_MODEL_ENDPOINT=https://router.huggingface.co/hf-inference/models/openai/whisper-large-v3-turbo
HUGGING_FACE_LLM_ENDPOINT=https://router.huggingface.co/cohere/compatibility/v1/chat/completions
HF_LLM=command-a-03-2025

# Jio Translate API key — obtain from your Jio AI platform account
JIO_API_KEY=your_jio_api_key_here

# STT provider: "whisper" | "jio"
STT_PROVIDER=whisper
