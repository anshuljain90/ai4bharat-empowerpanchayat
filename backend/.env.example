# =============================================================
# eGramSabha — Backend Environment Variables
# =============================================================
# Copy this file to .env and fill in the values:
#   cp .env.example .env
# =============================================================

PORT=5000
MONGODB_URI=mongodb://localhost:27017/voter_registration
NODE_ENV=development
CORS_ORIGIN=*
BACKEND_URL=http://localhost:5000

# JioMeet — get your App ID from https://jiomeetpro.jio.com
JIOMEET_API=https://jiomeetpro.jio.com/api/platform/v1
JIOMEET_APP_ID=your_jiomeet_app_id_here
PRIVATE_KEY_PATH=./keys/RSA-PrivateKey.pem
PUBLIC_KEY_PATH=./keys/RSA-PublicKey.pub

# Support contact info
SUPPORT_EMAIL=support@egramsabha.gov.in
SUPPORT_PHONE=1800-XXX-XXXX
SUPPORT_CONTACT_NAME=eGramSabha Support Team

# Cron jobs (every minute in dev, adjust for production)
AGENDA_TRANSLATION_CRON=* * * * *
INITIATE_SUMMARY_CRON=* * * * *
FETCH_SUMMARY_RESULTS_CRON=* * * * *
RETRY_FAILED_SUMMARY_CRON=* * * * *
